# Environment Configuration - Dhaka Waste Management System
# Last Updated: December 2025

# ===== DATABASE CONFIGURATION =====
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=
DB_NAME=waste_management
DB_CHARSET=utf8mb4

# ===== FLASK CONFIGURATION =====
FLASK_ENV=development
FLASK_APP=app.py
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-change-in-production

# ===== SERVER CONFIGURATION =====
HOST=localhost
PORT=5000
THREADED=True

# ===== CONNECTION POOL SETTINGS =====
POOL_SIZE=5
POOL_RESET_SESSION=True
CONNECTION_TIMEOUT=30

# ===== LOGGING CONFIGURATION =====
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
QUERY_LOG_FILE=database/schema.sql

# ===== SYSTEM CONFIGURATION =====
# Currency: Bangladeshi Taka (৳)
CURRENCY=BDT
CURRENCY_SYMBOL=৳
LOCALE=bn_BD

# ===== REGION CONFIGURATION =====
REGION=Dhaka
COUNTRY=Bangladesh
TIMEZONE=Asia/Dhaka

# ===== ORGANIZATION SETTINGS =====
ORG_NAME=ঢাকা বর্জ্য ব্যবস্থাপনা বিভাগ
ORG_NAME_EN=Dhaka Waste Management Department
CONTACT_EMAIL=info@dhaka-waste.gov.bd
CONTACT_PHONE=01700000000

# ===== AREAS (DHAKA DISTRICTS) =====
AREAS=গুলশান,বনানী,ধানমন্ডি,মিরপুর,মতিঝিল

# ===== RECYCLING CENTERS =====
CENTERS=ঢাকা কেন্দ্রীয় পুনর্ব্যবহার কেন্দ্র,উত্তর ঢাকা পুনর্ব্যবহার কেন্দ্র,দক্ষিণ ঢাকা পুনর্ব্যবহার কেন্দ্র,পূর্ব ঢাকা পুনর্ব্যবহার কেন্দ্র,পশ্চিম ঢাকা পুনর্ব্যবহার কেন্দ্র

# ===== FEATURES =====
ENABLE_QUERY_LOGGING=True
ENABLE_CONNECTION_POOLING=True
ENABLE_ASYNC_LOGGING=True
ASYNC_LOG_THREADS=10

# ===== SECURITY =====
CORS_ENABLED=False
MAX_LOGIN_ATTEMPTS=5
SESSION_TIMEOUT=3600
